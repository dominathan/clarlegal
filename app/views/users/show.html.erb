<% provide(:title, 'Profile') %>
<h1>Account Info</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if @user.lawfirm %>
        <th>Firm Name</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= User.full_name(@user) %></td>
      <td> <%= @user.email%></td>
      <% if @user.lawfirm %>
        <td><%= @user.lawfirm.firm_name %></td>
      <%end%>
    </tr>
  </tbody>
</table>

<div class='center'>
  <%= link_to "Edit #{User.full_name(@user)} Profile and Settings", edit_user_path(@user) %>
</div>

<% provide(:title, 'Profile') %>
<h1>Account Info</h1>
<br>
<h4>
<div class="row">
  <div class="col-lg-12">
    <table class='table table-hover'>
      <tr>
        <td>Name:</td>
        <td><%=User.full_name(@user)%></td>
      </tr>
      <tr>
        <td>Lawfirm:</td>
        <td><%= @user.lawfirm ? @user.lawfirm.firm_name : ""%></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= @user.email ? @user.email : " " %></td>
      </tr>
      <tr>
        <td>Phone Number:</td>
        <td><%= @user.phone_number ? @user.phone_number : " " %></td>
      </tr>
    </table>
  </div>
</div>
<h4>
<div class='center'>
  <%= link_to "Edit #{User.full_name(@user)} Profile and Settings", edit_user_path(@user) %>
</div>

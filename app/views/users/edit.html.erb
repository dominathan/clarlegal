<% provide(:title, "Edit user") %>
<h1>Update Account</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <table class="table">
          <tr>
            <td>  <%= f.label :first_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>  <%= f.label :last_name %></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td><%= f.label :email %></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number %></td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :practice_groups %></td>
            <td><%= f.collection_select(:practice_groups, current_user.lawfirm.practicegroups.order(:group_name), :group_name, :group_name, :include_blank => "Select") %></td>
          </tr>
          <tr>
            <td><%= f.label :password %></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "Confirmation" %></td>
            <td><%= f.password_field :password_confirmation %></td>
          </tr>
        </table>
        <div class="center">
          <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


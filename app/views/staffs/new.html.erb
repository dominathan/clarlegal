<% provide(:title, 'Case Staff') %>

<%= render 'shared/subheader' %>

<h1>Add Case Staff</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@staff, url: {action: "create"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Responsible Attorney:" %>
      <%=f.collection_select(:responsible_attorney, current_user.lawfirm.staffings, :last_name, :last_name) %>

      <%= f.label "Assigned Attorney 1:" %>
      <%=f.collection_select(:assigned_attorney_1, current_user.lawfirm.staffings, :last_name, :last_name) %>

      <%= f.label "Assigned Attorney 2:" %>
      <%=f.collection_select(:assigned_attorney_2, current_user.lawfirm.staffings, :last_name, :last_name) %>

      <%= f.label "Assigned Staff 1:" %>
      <%=f.collection_select(:assigned_staff_1, current_user.lawfirm.staffings, :last_name, :last_name) %>

      <%= f.label "Assigned Staff 2:" %>
      <%=f.collection_select(:assigned_staff_2, current_user.lawfirm.staffings, :last_name, :last_name) %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

    <% end %>

  <div class='center'>
    <%= link_to "Add Staff to #{@lawfirm.firm_name}", new_user_lawfirm_staffing_path(:user_id => current_user.id, :lawfirm_id => current_user.lawfirm_id) %>
  </div>

  </div>
</div>

<% provide(:title, 'Update Staff') %>

<%= render 'shared/subheader' %>

<h1>Update Case Staff</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@staff, url: {action: "update"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Name:" %>
      <%=f.collection_select(:name, current_user.lawfirm.staffings, :full_name, :full_name, :include_blank => "Select") %>

      <%= f.label "Position:" %>
      <%=f.collection_select(:position, current_user.lawfirm.staffings, :position, :position,:include_blank => "Select") %>

      <%= f.label "Expected Utilization Percentage:" %>
      <%=f.text_field :percent_utilization %>

      <%= f.label "Expected Total Hours:" %>
      <%=f.text_field :hours_expected %>


      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

    <% end %>

  <div class='center'>
    <%= link_to "Add Staff to #{@lawfirm.firm_name}", new_user_lawfirm_staffing_path(:user_id => current_user.id, :lawfirm_id => current_user.lawfirm_id) %>
  </div>

  </div>
</div>

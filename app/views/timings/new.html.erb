<% provide(:title, 'Case Dates') %>
<h1>Add Dates</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@staff, url: {action: "create"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Date Opened:" %>
      <%= f.text_field :date_opened, id: 'datepicker' %>

      <%= f.label "Estimated Conclusion:" %>
      <%= f.text_field :estimated_conclusion_date, id: 'datepicker'%>

      <%= f.label "Key Dates:" %>
      <%= f.text_field :key_date, id: 'datepicker' %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>

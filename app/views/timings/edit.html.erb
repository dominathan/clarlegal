<% provide(:title, 'Update Dates') %>

<%= render 'shared/subheader' %>

<h2>Update Timing</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@timing, url: {action: "update"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "File Opened:" %>
      <%= f.date_field :date_opened, id: 'datepicker' %>

      <%= f.label "Case Filed:" %>
      <%= f.date_field :case_filed, id: 'datepicker' %>

      <%= f.label "Fastest Estimated Conclusion:" %>
      <%= f.text_field :estimated_conclusion_fast, placeholder: "Months from Now" %>

      <%= f.label "Expected Estimated Conclusion:" %>
      <%= f.text_field :estimated_conclusion_expected, placeholder: "Months from Now" %>

      <%= f.label "Slowest Estimated Conclusion:" %>
      <%= f.text_field :estimated_conclusion_slow, placeholder: "Months from Now" %>


      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>

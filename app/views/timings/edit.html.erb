<% provide(:title, 'Update Dates') %>

<%= render 'shared/subheader' %>

<h2>Update Timing</h2>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(@timing, url: {action: "update"}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>


        <table class='table'>
          <tr>
            <td><%= f.label "File Opened:" %></td>
            <td><%= f.date_field :date_opened, id: 'datepicker' %></td>
          </tr>
          <tr>
            <td><%= f.label "Case Filed:" %></td>
            <td><%= f.date_field :case_filed, id: 'datepicker' %></td>
          </tr>
          <tr>
            <td><%= f.label "Fastest Estimated Conclusion:" %></td>
            <td><%= f.text_field :estimated_conclusion_fast, placeholder: "Months from Now" %></td>
          </tr>
          <tr>
            <td><%= f.label "Expected Estimated Conclusion:" %></td>
            <td><%= f.text_field :estimated_conclusion_expected, placeholder: "Months from Now" %></td>
          </tr>
          <tr>
            <td><%= f.label "Slowest Estimated Conclusion:" %></td>
            <td><%= f.text_field :estimated_conclusion_slow, placeholder: "Months from Now" %></td>
          </tr>
        </table>
        <div class="center">
          <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

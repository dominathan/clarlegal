<% provide(:title, "Forgot password") %>

<h2>Reset Lawfirm Password</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:lawfirm_password_reset, url: lawfirm_password_resets_path) do |f| %>
        <table class="table">
          <tr>
            <td><%= f.label :email, "Email Address" %></td>
            <td><%= f.text_field :email, class: 'form-control', placeholder: "Enter the primary account holder's email address." %></td>
          </tr>
        </table>
        <div class="center">
          <%= f.submit "Reset Password", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>

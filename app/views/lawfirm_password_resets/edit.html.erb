<% provide(:title, 'Reset Lawfirm Password') %>
<h2>Reset Lawfirm Password</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@lawfirm, url: lawfirm_password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= hidden_field_tag :email, @user.email %>
      <table class="table">
        <tr>
          <td><%= f.label :password, "Password:" %></td>
          <td><%= f.password_field :password, class: 'form-control' %> </td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "Password Confirmation:" %></td>
          <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
        </tr>

      </table>
      <div class="center">
        <%= f.submit "Update password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

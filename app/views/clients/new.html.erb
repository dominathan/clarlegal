<% provide(:title, 'Add client') %>
<h1>Add Client</h1>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(@client) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Name:" %>
      <%= f.text_field :client_name %>

      <%= f.label "Street Address:" %>
      <%= f.text_field :client_street_address %>

      <%= f.label "City:" %>
      <%= f.text_field :client_city_address %>

      <%= f.label "State:" %>
      <%= f.text_field :client_state_address %>

      <%= f.label "Zip Code:" %>
      <%= f.text_field :client_zip_code %>

      <%= f.label "Phone Number:" %>
      <%= f.text_field :client_phone_number, placeholder: "e.g. (555) 555-5555" %>

      <%= f.label "Fax Number:" %>
      <%= f.text_field :client_fax_number %>

      <%= f.label "Email Address:" %>
      <%= f.text_field :client_email %>

      <%= f.submit "Create Client", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


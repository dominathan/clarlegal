<% provide(:title, 'Add client') %>
<h1>Add Client</h1>


<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
    <%= form_for @client do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

        <table class="table">
          <tr>
            <td><%= f.label :company, "Company Name:" %></td>
            <td><%= f.text_field :company %></td>
          </tr>
          <tr>
            <td><%= f.label :first_name, "First Name:" %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td><%= f.label :last_name, "Last Name:" %></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td><%= f.label :street_address, "Street Address:" %></td>
            <td><%= f.text_field :street_address %></td>
          </tr>
          <tr>
            <td><%= f.label :city, "City:" %></td>
            <td><%= f.text_field :city %></td>
          </tr>
          <tr>
            <td><%= f.label :state, "State:" %></td>
            <td><%= f.select :state, StaticInformation::STATES.select {|x| x[0]  } %></td>
          </tr>
          <tr>
            <td><%= f.label :zip_code, "Zip Code:" %></td>
            <td><%= f.text_field :zip_code %></td>
          </tr>
          <tr>
            <td><%= f.label :country, "Country:" %></td>
            <td><%= f.select :state, StaticInformation::COUNTRIES %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number, "Primary Phone Number:" %></td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :fax_number, "Fax Number:" %></td>
            <td><%= f.telephone_field :fax_number %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "Email Address:" %></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label "Different Billing Address?" %> </td>
            <td><%= f.check_box :different_billing %> </td>
          </tr>


        </table>

        <br>

          <div class='billing hide' id="billing-information">
            <h2>Billing Address</h2>

            <%= f.fields_for :billings do |ff| %>
              <table class="table">
                <tr>
                  <td><%= ff.label :name, 'Company Name:' %></td>
                  <td><%= ff.text_field :name %></td>
                </tr>
                <tr>
                  <td><%= ff.label :street_address, 'Street Address:' %></td>
                  <td><%= ff.text_field :street_address %></td>
                </tr>
                <tr>
                  <td><%= ff.label :city, 'City:' %></td>
                  <td><%= ff.text_field :city %></td>
                </tr>
                <tr>
                  <td><%= ff.label :state, 'State:' %></td>
                  <td><%= ff.select :state, StaticInformation::STATES.select {|x| x[0]  } %></td>
                </tr>
                <tr>
                  <td><%= ff.label :zip_code, 'Zip Code:' %></td>
                  <td><%= ff.text_field :zip_code %></td>
                </tr>
                <tr>
                  <td><%= f.label :country, "Country:" %></td>
                  <td><%= f.select :state, StaticInformation::COUNTRIES %></td>
                </tr>
              </table>

              <% end %>
          </div>
          <div class="center">
            <%= f.submit "Create Client", class: "btn btn-default btn-lg" %>
          </div>
    <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#client_different_billing").click(function(){
     $("#billing-information").toggleClass('hide')
   });
</script>


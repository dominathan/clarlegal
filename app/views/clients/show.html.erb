<% provide(:title, @client.client_name) %>

<h1>Client Information</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>View Cases</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @client.client_name %></td>
      <% if current_user.clients.where(id: params[:id]) != [] %>
        <td><%= link_to "Cases for #{@client.client_name}", client_cases_path(@client) %></td>
      <% else %>
        <td>You Must Be the Client Owner to Access Cases</td>
      <% end %>
      <td><%= @client.client_email %></td>
      <td><%= @client.client_phone_number %></td>
      <td><%= @client.client_street_address %><br>
          <%= @client.client_city_address%>, <%=@client.client_state_address%>, <%=@client.client_zip_code %>
      </td>
    </tr>
  </tbody>
</table>
<br>
<br>

<h2><%= link_to "Update Client Information", edit_client_path(@client) %></h2>



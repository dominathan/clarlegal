<% provide(:title, 'Update Client Info') %>
<h1>Update Client Info</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@client) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :client_name %>
      <%= f.text_field :client_name %>

      <%= f.label :client_street_address %>
      <%= f.text_field :client_street_address %>

      <%= f.label :client_city_address %>
      <%= f.text_field :client_city_address %>

      <%= f.label :client_state_address %>
      <%= f.text_field :client_state_address %>

      <%= f.label :client_zip_code %>
      <%= f.text_field :client_zip_code %>

      <%= f.label :client_phone_number %>
      <%= f.text_field :client_phone_number %>

      <%= f.label :client_fax_number %>
      <%= f.text_field :client_fax_number %>

      <%= f.label :client_email %>
      <%= f.text_field :client_email %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>



<% provide(:title, 'Update Client Info') %>
<h1>Update Client Info</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(@client) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <table class="table">
          <tr>
            <td><%= f.label :first_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td><%= f.label :last_name %></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td><%= f.label :street_address %></td>
            <td><%= f.text_field :street_address %></td>
          </tr>
          <tr>
            <td><%= f.label :city %></td>
            <td><%= f.text_field :city %></td>
          </tr>
          <tr>
            <td><%= f.label :state %></td>
            <td><%= f.text_field :state %></td>
          </tr>
          <tr>
            <td><%= f.label :zip_code %></td>
            <td><%= f.text_field :zip_code %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number %></td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :fax_number %></td>
            <td><%= f.text_field :fax_number %></td>
          </tr>
          <tr>
            <td><%= f.label :email %></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label "Different Billing Address?" %> </td>
            <td><%= f.check_box :different_billing %> </td>
          </tr>


        </table>

        <br>

          <div class='billing hide' id="billing-information">
            <h2>Billing Address</h2>

            <%= f.fields_for :billings do |ff| %>
              <table class="table">
                <tr>
                  <td><%= ff.label 'Name:' %></td>
                  <td><%= ff.text_field :name %></td>
                </tr>
                <tr>
                  <td><%= ff.label 'Street Address:' %></td>
                  <td><%= ff.text_field :street_address %></td>
                </tr>
                <tr>
                  <td><%= ff.label 'City:' %></td>
                  <td><%= ff.text_field :city %></td>
                </tr>
                <tr>
                  <td><%= ff.label 'State:' %></td>
                  <td><%= ff.text_field :state %></td>
                </tr>
                <tr>
                  <td><%= ff.label 'Zip Code:' %></td>
                  <td><%= ff.text_field :zip_code %></td>
                </tr>
              </table>

              <% end %>
          </div>
        </table>
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#client_different_billing").click(function(){
     $("#billing-information").toggleClass('hide')
   });
</script>



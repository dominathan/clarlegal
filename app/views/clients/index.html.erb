<% provide(:title, 'Client List') %>
<h1>Client List</h1>

<% if current_user.clients.present? %>
  <% current_user.clients.each do |client| %>
   <tr>
    <td><%= client.client_name %></td>
    <td><%= link_to 'Show Client', client_path(client) %> | </td>
    <td><%= link_to 'Edit Client', edit_client_path(client) %> | </td>
    <td><%= link_to 'Add Case', new_client_case_path(client) %> | </td>
    <td><%= link_to 'Show Cases', client_cases_path(client) %></td><br>
   </tr>
 <% end %>
<% else %>
 <tr>
   <td>You must</td>
   <td><%= link_to 'Add a Client', new_client_path %></td>
 </tr>
<% end %>

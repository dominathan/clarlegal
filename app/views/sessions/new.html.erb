<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<br>
    <div class="col-lg-10 col-lg-offset-1">
      <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal"}) do |f| %>

      <div class="form-group">
        <div class="">
          <%= f.label :email, "Email:", class: "control-label col-sm-3" %>
        </div>
        <div class='col-sm-6'>
          <%= f.text_field :email, class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="">
          <%= f.label :password, "Password:", class: "control-label col-sm-3" %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-3">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>
      </div>

        <div class="center">
          <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
        </div>
      <% end %>

      <div class="col-sm-6 col-sm-offset-2">
        <p>New User? <%= link_to "Sign Up", new_user_path %></p>
        <p>Forgot Password? <%= link_to "Click Here", new_password_reset_path %>
      </div>
    </div>

<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id]), html: {class: "form-horizontal"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>
      <div class="form-group">
        <%= f.label :password, "New Password:", class: "control-label col-sm-3" %>
        <div class='col-sm-6'>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "New Password Confirmation:", class: "control-label col-sm-3" %>
        <div class='col-sm-6'>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="center">
        <%= f.submit "Update password", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>

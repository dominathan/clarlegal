<% provide(:title, 'Update Case Matter') %>

<%= render 'shared/subheader' %>

<h2>Update Case Information</h2>

<div class='container'>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= form_for @case, url: {action: "update"} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <table class="table">
           <tr>
            <td><%= f.label 'Case Name:' %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :primary_email, "Email Recipient:"%></td>
            <td><%= f.collection_select(:primary_email, current_user.lawfirm.staffings.order(:full_name), :email, :full_name, :include_blank => "Select Primary Contact for #{@case.name}") %></td>
          </tr>
          <tr>
            <td><%= f.label 'Court:' %></td>
            <td><%= f.text_field :court %></td>
          </tr>
          <tr>
            <td><%= f.label 'Judge:' %></td>
            <td><%= f.text_field :judge %></td>
          </tr>
          <tr>
            <td><%= f.label 'Case Number:' %></td>
            <td><%= f.text_field :case_number %></td>
          </tr>
          <tr>
            <td><%= f.label 'Opposing Counsel:' %></td>
            <td><%= f.text_field :opposing_attorney %> </td>
          </tr>
          <tr>
            <td><%= f.label 'Practice Group:' %></td>
            <td><%= f.collection_select(:practicegroup_id, current_user.lawfirm.practicegroups.order(:group_name), :id, :group_name, :include_blank => "Select Existing") %></td>
          </tr>
        </table>
        <div class="center">

          <%= f.label 'Notes and Description' %>
          <%= f.text_area :description %>


        <%= f.submit "Update Case", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

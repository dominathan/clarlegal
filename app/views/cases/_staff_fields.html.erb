<div class='nested-fields'>

  <table class="table">
    <tr>
      <td><%= f.label "Name:" %></td>
      <td><%= f.collection_select(:staffing_id, current_user.lawfirm.staffings.order(:full_name).all, :id, :full_name, :include_blank => "Select") %></td>
      <td class='hidden'>
    </tr>
    <tr>
      <td><%= f.label "Position:" %></td>
      <td><%= f.select(:position, Staffing.all_positions(current_user).uniq.sort, :include_blank => "Select") %></td>
    </tr>
    <tr class="expectedTotalHours">
      <td><%= f.label :hours_expected, "Expected Total Hours:" %></td>
      <td><%= f.text_field :hours_expected, :placeholder => "Leave blank if case is closed." %></td>
    <tr>
      <td><%= f.label :hours_actual, "Actual Hours Worked:" %></td>
      <td><%= f.text_field :hours_actual, :placeholder => 'Leave blank if none.' %></td>
    </tr>
</div>

<script type="text/javascript">
  var hideTheseElements = function(el) {
    $(el).each(function(i,obj){
      $(this).addClass('hide');
    });
  };

  $('.addStaff').click(function() {
    if($('.fee').length === 0) {
      setTimeout(hideTheseElements($('.expectedTotalHours')),1000);
    };
  });
</script>

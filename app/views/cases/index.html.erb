<% provide(:title, 'Cases') %>
<h1><%= "#{@client.client_name} Cases" %></h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Case Name</th>
      <th>Matter Reference</th>
      <th>Description</th>
      <th>Practice Group</th>
      <th>More Information</th>
    </tr>
  </thead>
  <tbody>
    <% if @case %> <!-- does the client have cases?  If show then show them-->
      <% @case.order(:name).each do |one_case| %>
       <tr>
        <td><%= one_case.name %></td>
        <td><%= one_case.matter_reference %></td>
        <td><%= one_case.description %> </td>
        <td><%= one_case.practice_group %> </td>
        <td><%= link_to "More Information", client_case_path(:client_id => @client.id, :id => one_case.id) %> </td>
      <% end %>
    <% else %>
    <% end %>
  </tbody>
</table>

<div class='center'>
  <%= link_to 'Add a Case', new_client_case_path(@client) %>
</div>

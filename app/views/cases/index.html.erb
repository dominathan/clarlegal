<% provide(:title, 'Cases') %>
<h2><%= "#{@client.client_name} Cases" %></h2>


<table class="table table-hover sortable">
  <thead>
    <tr>
      <th>Case Name<br>
        (click to view)</th>
      <th>Practice Group</th>
      <th>Client Name</th>
      <th>Date Filed</th>
  </thead>
  <tbody>
    <% if @case %> <!-- does the client have cases?  If show then show them-->
      <% @case.each do |one_case| %>
       <tr>
        <td><%= link_to one_case.name, client_case_path(:client_id => @client.id, :id => one_case.id) %></td>
        <td><%= one_case.practice_group %></td>
        <td><%= one_case.client.client_name %></td>
        <td><%= one_case.timing.order(:created_at).last.case_filed ? one_case.timing.order(:created_at).last.case_filed : "" %> </td>
      <% end %>
    <% else %>
    <% end %>
  </tbody>
</table>

<%= will_paginate @case, renderer: BootstrapPagination::Rails %>

<div class='center'>
  <%= link_to 'Add a Case', new_client_case_path(@client) %>
</div>

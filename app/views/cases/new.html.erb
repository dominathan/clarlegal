<% provide(:title, "New Case") %>
<h1><%= "New Case for #{@client.client_name}" %> </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @case, url: {action: "create"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label 'Matter Reference:' %>
      <%= f.select :matter_reference, Case::MATTER_REFERENCES %>

      <%= f.label 'Case Description:' %>
      <%= f.text_area :description %>

      <%= f.label 'Practice Group:' %>
      <%= f.select :practice_group, Case::PRACTICE_GROUP %>

      <%= f.submit "Create Case", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

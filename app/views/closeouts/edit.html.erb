<% provide(:title, 'Closeout') %>

<%= render 'shared/subheader' %>

<h2>Case Closeout Form</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@closeout, url: {action: "update"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "Total Recovery:" %>
      <%= f.text_field :total_recovery %>

      <%= f.label "Total Gross Fee Received:" %>
      <%= f.text_field :total_gross_fee_received %>

      <%= f.label "Total Out-of-Pocket Expenses:" %>
      <%= f.text_field :total_out_of_pocket_expenses %>

      <%= f.label "Referring Fee Paid:" %>
      <%= f.text_field :referring_fees_paid %>

      <%= f.label "Total Fee Received:" %>
      <%= f.text_field :total_fee_received %>

      <%= f.label "Date Fee Received:" %>
      <%= f.date_field :date_fee_received, id: 'datepicker' %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>

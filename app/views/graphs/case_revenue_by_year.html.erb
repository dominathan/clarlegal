<% provide(:title, 'Revenue by Year') %>

<div id="revenueByYear" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<br>
<div class='center'>
<%= link_to "Fast Recovery Rate", revenue_by_year_fast_path, class: "btn btn-large btn-small" %>
<%= link_to "Expected Recovery Rate", revenue_by_year_path, class: "btn btn-large btn-small" %>
<%= link_to "Slow Recovery Rate", revenue_by_year_slow_path, class: "btn btn-large btn-small" %>
</div>

<script type="text/javascript">

var highArray =  <%= raw @high_final_estimate %>;
var mediumArray = <%= raw @medium_final_estimate %>;
var lowArray = <%= raw @low_final_estimate %>;
var categoryYear = <%= @category_years %>;
var categoryLinks = {
   "<%=@category_years[0] %>" : "<%=revenue_by_year_yr_1_url.to_str %>",
   "<%=@category_years[1] %>" : "<%=revenue_by_year_yr_2_url.to_str %>",
   "<%=@category_years[2] %>" : "<%=revenue_by_year_yr_3_url.to_str %>",
   "<%=@category_years[3] %>" : "<%=revenue_by_year_yr_4_url.to_str %>",
   "<%=@category_years[4] %>" : "<%=revenue_by_year_yr_5_url.to_str %>",
 };


  $(function () {
        $('#revenueByYear').highcharts({
            chart: {
                type: 'column'
            },
            credits: {
                enabled: false
            },
            title: {
                text: 'Expected Revenue by Year'
            },
            subtitle: {
                text: '(assuming medium recovery rate)'
            },
            xAxis: {
                categories: categoryYear,
                labels: {
                    formatter: function () {
                        return '<a href="'  + categoryLinks[this.value] + '">' + this.value + '</a>';
                    },
                    useHTML: true
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Revenue (in millions)'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>${point.y}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [
            {
              name: "Low Revenue Est.",
              data: lowArray
            },
            {
              name: "Medium Revenue Est.",
              data: mediumArray
            },
            {
              name: "High Revenue Est.",
              data: highArray
            }
            ]
        });
    });



</script>

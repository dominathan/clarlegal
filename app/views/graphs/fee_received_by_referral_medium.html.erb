<% provide(:title, 'Gross Fee by Referral Source') %>

<div class="chart container">
  <div class="col-lg-10 col-lg-offset-2">
    <div id='referralSourceRevenueLow' style="min-width: 310px;
                                  height: 600px; width: 600px;
                                  max-width: 600px;
                                   margin: 0 auto">
    </div>
    <div id='referralSourceRevenueExpected' style="min-width: 310px;
                                  height: 600px; width: 600px;
                                  max-width: 600px;
                                   margin: 0 auto">
    </div>
    <div id='referralSourceRevenueHigh' style="min-width: 310px;
                                  height: 600px; width: 600px;
                                  max-width: 600px;
                                   margin: 0 auto">
    </div>
  </div>
</div>

<script>

$(function () {

  var pieDataExpected = [<% @fee_by_origination_source_medium.each do |d|%>
                  <%= raw d %>,
                <% end %>]

  var pieDataHigh = [<% @fee_by_origination_source_high.each do |d|%>
                  <%= raw d %>,
                <% end %>]

  var pieDataLow = [<% @fee_by_origination_source_low.each do |d|%>
                  <%= raw d %>,
                <% end %>]

    Highcharts.getOptions().colors = Highcharts.map(Highcharts.getOptions().colors, function(color) {
            return {
                radialGradient: { cx: 0.5, cy: 0.3, r: 0.7 },
                stops: [
                    [0, color],
                    [1, Highcharts.Color(color).brighten(-0.3).get('rgb')] // darken
                ]
            };
        });

    $('#referralSourceRevenueExpected').highcharts({
        chart: {
                plotBackgroundColor: null,
                plotBorderWidth: 1,//null,
                plotShadow: false
            },
            credits: {
                    enabled: false
            },
            title: {
                text: 'Expected Gross Fee by Referral Source (Medium Estimate)'
            },
            tooltip: {
              pointFormat: '<b>${point.y}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: "Expected Revenue by Referral Source",
                data: pieDataExpected
            }]
        });

      $('#referralSourceRevenueHigh').highcharts({
        chart: {
                plotBackgroundColor: null,
                plotBorderWidth: 1,//null,
                plotShadow: false
            },
            credits: {
                    enabled: false
            },
            title: {
                text: 'Expected Gross Fee by Referral Source (High Estimate)'
            },
            tooltip: {
              pointFormat: '<b>${point.y}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: "Low Revenue by Referral Source",
                data: pieDataHigh
            }]
        });

      $('#referralSourceRevenueLow').highcharts({
        chart: {
                plotBackgroundColor: null,
                plotBorderWidth: 1,//null,
                plotShadow: false
            },
            credits: {
                    enabled: false
            },
            title: {
                text: 'Expected Gross Fee by Referral Source (Low Estimate)'
            },
            tooltip: {
              pointFormat: '<b>${point.y}</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: "Low Revenue by Referral Source",
                data: pieDataLow
            }]
        });
    });

</script>

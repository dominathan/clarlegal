<% provide(:title, 'Matter References') %>
<h1> Matter References</h1>

<table class="table table-hover sortable">
  <thead>
    <tr>
      <th>Matter References</th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.lawfirm.case_types %> <!-- does the client have cases?  If show then show them-->
      <% current_user.lawfirm.case_types.order(:mat_ref).each do |matter_reference| %>
       <tr>
        <td><%= matter_reference.mat_ref %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class='center'>
  <%= link_to 'Add Matter Reference', new_user_lawfirm_case_type_path(:user_id => current_user.id, :lawfirm_id => current_user.lawfirm.id) %>
</div>

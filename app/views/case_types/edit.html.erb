<% provide(:title, "Edit Matter Type") %>
<h1><%= "Edit Matter Type" %> </h1>

<div class="row">
  <div class="col-lg-8 col-lg-offset-2">

    <%= form_for @case_type, url: {action: "update"}, html: { class: "form-horizontal" } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

         <div class="form-group">
          <div class="col-sm-3">
            <%= f.label :mat_ref, "Matter Reference:", class: "control-label" %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :mat_ref, class: "form-control" %>
          </div>
        </div>

      <div class="center">
        <%= f.submit "Update Matter Type", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<% provide(:title, "Edit Matter Type") %>
<h1><%= "Edit Matter Type" %> </h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">

    <%= form_for @case_type, url: {action: "update"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label 'Matter Type:' %>
      <%= f.text_field :mat_ref %>

      <div class="center">
        <%= f.submit "Update Matter Type", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

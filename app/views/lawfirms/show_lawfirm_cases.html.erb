<% provide(:title, 'Cases') %>

<h1><%= "#{@firm_name} Case List" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Case Name</th>
      <th>Matter Reference</th>
      <th>Description</th>
      <th>Practice Group</th>
      <th>Client Name</th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.lawfirm.present? %> <!-- does the lawfirm have cases?  If show then show them-->
      <% current_user.lawfirm.cases.order(:practice_group).each do |one_case| %>
       <tr>
        <td><%= one_case.name %></td>
        <td><%= one_case.matter_reference %></td>
        <td><%= one_case.description %> </td>
        <td><%= one_case.practice_group %> </td>
        <td><%= one_case.client.client_name %> </td>
      <% end %>
    <% else %>
    <% end %>
  </tbody>
</table>

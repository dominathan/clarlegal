<% provide(:title, 'Add Law Firm') %>
<h1>Add Law Firm</h1>

<div class='container'>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="center">
        <p>Does your law firm already have an account with ClarLegal?</p>
        <%= link_to "Click Here", joinlawfirm_path, class: 'btn btn-sm btn-primary' %>
      </div>
    <br>
    <br>
    <%= form_for(@lawfirm, url: {action: "create"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <table class="table">
        <tr>
          <td><%= f.label :firm_name, "Law Firm Name:" %></td>
          <td><%= f.text_field :firm_name %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "Password:" %></td>
          <td><%= f.password_field :password, :placeholder => "Be sure to write this down for other firm members." %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "Password Confirmation" %></td>
          <td><%= f.password_field :password_confirmation, :placeholder => "And keep separate from your user password." %></td>
        </tr>
      </table>
      <div class="center">
        <%= f.submit "Create Firm", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<% provide(:title, 'Add Law Firm') %>
<h1>Add Law Firm</h1>

<div class='container'>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="center">
        <p>Does your law firm already have an account with ClarLegal?</p>
        <%= link_to "Click Here", joinlawfirm_path, class: 'btn btn-sm btn-primary' %>
      </div>
    <br>
    <br>
    <%= form_for(@lawfirm, url: {action: "create"}, html: {class: "form-horizontal"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <div class="">
              <td><%= f.label :firm_name, "Firm Name:", class: "control-label col-sm-3" %></td>
            </div>
            <div class='col-sm-6'>
              <td><%= f.text_field :firm_name, class: "form-control" %></td>
            </div>
          </div>

          <div class="form-group">
            <div class="">
              <td><%= f.label :password, class: "control-label col-sm-3" %></td>
            </div>
            <div class='col-sm-6'>
              <td><%= f.password_field :password, class: "form-control", :placeholder => "Be sure to write this down for other firm members." %></td>
            </div>
          </div>

          <div class="form-group">
            <div class="">
              <td><%= f.label :password_confirmation,"Password Confirmation", class: "control-label col-sm-3" %></td>
            </div>
            <div class='col-sm-6'>
              <td><%= f.password_field :password_confirmation, class: "form-control", :placeholder => "And keep separate from your user password." %></td>
            </div>
          </div>

      <div class="center">
        <%= f.submit "Create Firm", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

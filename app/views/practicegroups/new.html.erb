<% provide(:title, "New Practice Group") %>

<h2>Add Practice Group to <%= "#{@lawfirm.firm_name}" %> </h2>

<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for(@prac_group, url: {action: "create"}, html: {class: "form-horizontal"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


       <div class="form-group">
          <div class="col-sm-3">
            <%= f.label :group_name, "Practice Group Name:", class: "control-label" %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :group_name, class: "form-control" %>
          </div>
        </div>

        <div class="center">
         <%= f.submit "Add Practice Group", class: "btn btn-md btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

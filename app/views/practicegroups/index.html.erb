<% provide(:title, "Practice Groups") %>

<h1>Practice Groups for <%= "#{@lawfirm.firm_name}" %></h1>

<table class="table table-hover sortable">
  <thead>
    <tr>
      <th>Practice Group Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.lawfirm.practicegroups.present? %>
      <% current_user.lawfirm.practicegroups.order(:group_name).each do |group| %>
        <tr>
          <td><%= group.group_name %></td>
          <td><%= link_to "Edit", edit_user_lawfirm_practicegroup_path(:user_id => current_user.id, :lawfirm_id => current_user.lawfirm.id, :id => group.id), :class => "btn btn-xs btn-primary"  %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

      <div class='center'>
        <%= link_to "Add Practice Group", new_user_lawfirm_practicegroup_path(:user_id => current_user.id, :lawfirm_id => current_user.lawfirm_id), class: 'btn btn-lg btn-primary' %>
      </div>


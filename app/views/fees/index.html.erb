<% provide(:title, 'Fee Timeline') %>

<%= render 'shared/subheader' %>

<h2>Fee Timeline  </h2>

<table class="table table-hover sortable">
  <thead>
    <tr>
      <th>Fee Type</th>
      <th>Low Estimate</th>
      <th>Medium Estimate</th>
      <th>High Estimate</th>
      <th>Estimated Out-of-Pocket Expenses</th>
      <th>Fee Owed to Referral Source</th>
      <th>Likelihood of Recovery</th>
      <th>Retainer</th>
      <th>Last Update</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @fee.each do |fee| %>
        <tr>
          <td><%= fee.fee_type%></td>
          <td><%= fee.low_estimate%></td>
          <td><%= fee.medium_estimate%></td>
          <td><%= fee.high_estimate%></td>
          <td><%= fee.cost_estimate%></td>
          <td><%= fee.referral %></td>
          <td><%= fee.payment_likelihood%></td>
          <td><%= fee.retainer%></td>
          <td><%= fee.updated_at.strftime("%b %d, %Y")%></td>
          <td><%= link_to "Edit", edit_client_case_fee_path(@client,@case,fee.id)%></td>
        </tr>
      <% end %>
  </tbody>
</table>

<div class='center'>
   <p> <%= link_to 'Update Fee Timeline', new_client_case_fee_path(@client,@case) %></p>
</div>

<div id="feeTimeline" style="min-width: 310px; height: 400px; margin: 0 auto">
</div>




<script type="text/javascript">
  var categories = <%= raw @fee_timeline %>;
  var lowEstimate = <%= @fee_low_estimates %>;
  var mediumEstimate = <%= @fee_medium_estimates %>;
  var highEstimate = <%= @fee_high_estimates %>;

  $(function () {
    $('#feeTimeline').highcharts({
        chart: {
            type: 'line'
        },
        credits: {
          enabled: false
        },
        title: {
            text: 'Fee Timeline'
        },
        subtitle: {
            text: 'Estimated Gross Fee over Time'
        },
        xAxis: {
            categories: categories
        },
        yAxis: {
            title: {
                text: 'Amount ($)'
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true
                },
                enableMouseTracking: false
            }
        },
        series: [{
            name: 'Low Gross Fee Estimate',
            data: lowEstimate
        }, {
            name: 'Medium Gross Fee Estimate',
            data: mediumEstimate
        }, {
            name: "High Gross Fee Estimate",
            data: highEstimate
        }]
    });
});
</script>
